pipeline {

    agent any
    environment {
        VAR_ONE = 'value one -5b'
    }
    options {
        timestamps()
    }
    stages {
        stage('Setup'){
            steps {
                parameters {
                  choice(
                    name: 'BUILD_TYPE',
                    choices: ['PCR', 'RELEASE'],
                    description: 'choose your build type'
                  )
                }
                script {
                    echo "Chosen Choice: ${params.BUILD_TYPE}"
                }
            }
        }

        stage('Build') {
            environment {
                VAR_TWO = 'value two -5b'
            }
            steps {
                echo "value one ${env.VAR_ONE}"
                echo "value two ${env.VAR_two}"
            }
        } // end of build stage

    }

}