pipeline {
    agent any
    triggers {
        cron('* * * * *')
    }
    environment {
        VAR_ONE = 'value one -5b'
    }
    options {
        timestamps()
    }
    parameters {
        choice (
            choices: ['PCR', 'RELEASE'],
            name: 'BUILD_TYPE'
        )
        string (
            name: 'STRING_NAME',
            defaultValue: 'Emilie',
            description: 'Your first name'
        )
        booleanParam (
            name: 'ITS_EITHER_A_YES_OR_A_NO',
            description: 'Pick either or :)'
        )
    }

    stages {
        stage('Setup'){
            steps {
                echo "Chosen build type: ${params.BUILD_TYPE}"
            }
        }

        stage('Build') {
            environment {
                VAR_TWO = 'value two -5b'
            }
            steps {
                echo "value one ${env.VAR_ONE}"
                echo "value two ${env.VAR_two}"
                echo "${params.BUILD_TYPE}"
            }
        } // end of build stage
    }
}